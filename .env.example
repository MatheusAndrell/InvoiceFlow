# ============================================================
# InvoiceFlow - Variáveis de Ambiente
# Copie este arquivo para .env e preencha os valores
# ============================================================

# ----- Aplicação -----
APP_ENV=development
APP_PORT=3000
APP_SECRET=troque_por_uma_chave_secreta_forte

# ----- Banco de Dados (PostgreSQL) -----
DB_HOST=localhost
DB_PORT=5432
DB_NAME=invoiceflow
DB_USER=invoiceflow_user
DB_PASSWORD=invoiceflow_pass

# ----- Fila de Mensagens (RabbitMQ) -----
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ----- Cache (Redis) -----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ----- Certificado Digital -----
CERT_PATH=./certs/certificado.pfx
CERT_PASSWORD=senha_do_certificado

# ----- Integração Simulada com o Governo -----
GOV_API_URL=http://localhost:8080/nfse
GOV_API_TIMEOUT=30000

# ----- Configurações NFS-e -----
NFSE_MUNICIPIO_CODIGO=3550308
NFSE_AMBIENTE=2
# 1 = Produção | 2 = Homologação
